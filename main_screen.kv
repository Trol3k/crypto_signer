<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'

        Button:
            id: sign_button
            text: 'Sign document'
            on_release: app.root.current = 'pin'
            disabled: True

        Button:
            text: 'Signature verification'
            on_release: app.root.current = 'signatureVerification'

        Button:
            text: 'Encrypt'
            on_release: app.root.current = 'encrypt'

        Button:
            text: 'Decrypt'
            on_release: app.root.current = 'decrypt'

        Label:
            id: connection_label
