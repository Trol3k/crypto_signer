<SignDocumentScreen>:
    name: 'signDocument'
    BoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            Button:
                text: 'Back'
                size_hint: None, None
                size: 50, 50
                on_release: app.root.current = 'main'

        Button:
            text: 'Select file'
            on_release: root.select_file()

        Button:
            id: sign_button
            text: 'Sign document'
            disabled: True
            on_release: root.sign_document()

        Label:
            id: file_label
            text: 'No file selected'

        Label:
            id: connection_label
